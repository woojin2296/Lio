<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Page<%= page %></title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
	<%-include('./header.ejs') %>

	<div class="three">
		<script src="js/three.js"></script>
		<script>
			const scene = new THREE.Scene();
			const camera = new THREE.PerspectiveCamera(35, window.innerWidth / window.innerHeight, 0.1, 1000 );

			const params = {
  				color: '#ffffff'
			};

			scene.background = new THREE.Color( params.color );

			const renderer = new THREE.WebGLRenderer();
			var height = window.innerHeight - 90;
			renderer.setSize( window.innerWidth, height);
			document.body.appendChild( renderer.domElement );

			// var geometry = new THREE.Box3(mn,mx);
			// var material = new THREE.MeshBasicMaterial({color: 0xff11ff, wireframe: true});
			// var bBox = new THREE.Mesh(geometry, material);
			// scene.add(bBox);

			const geometry = new THREE.SphereGeometry();
			var texture = new THREE.TextureLoader().load('img/earthmap.jpg');
			const material = new THREE.MeshBasicMaterial({map : texture, overdraw: 0.1});
			const earth = new THREE.Mesh( geometry, material );
			scene.add(earth);

			camera.position.z = 5;

			function animate() {
				requestAnimationFrame( animate );

				earth.rotation.x += 0.00;
				earth.rotation.y += 0.02;

				renderer.render( scene, camera );
			};

			animate();

			
		</script>
	</div>		

	<%-include('./footer.ejs') %>
</body>
</html>